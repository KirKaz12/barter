//- svg sprite mixin
mixin icon(name,mod)
	- mod = mod || ''
	svg(class="icon icon-" + name + ' ' + mod)
		use(xlink:href="#icon-" + name)

mixin link(path)
	link(rel="stylesheet", href=path+".css")

mixin script(path)
	script(src=path)

mixin body(name)
	- name = name || "body"
	body(class=name)
		.body-wrapper
			block content
				header.header
				main(class="main-"+name)
				footer.footer
		block scripts
			+script("js/common.js")

